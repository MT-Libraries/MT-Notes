
{{#extend "stylesheets"}}
    <link rel="stylesheet" href="/public/css/pro/docs-single-141fb7b0.css"/>
{{/extend}}
    
<div class="docs">
    <div class="container">            
        {{#if pageContent.render}}

            <div class="document">
                <h4 class="title">{{pageContent.title}}</h4>

                <div class="content">
                    {{{pageContent.content}}}
                </div>

                <!-- Comments -->
                {{> layout_comments}}

            </div>

        {{else}}

            <div class="document">
                <h3 class="title">Can't get ?</h3>

                <div class="content">
                    <pre>Something wrong, you may try again.</pre>
                    {{pageContent.content}}
                </div>
            </div>

        {{/if}}
    </div>

</div>

{{#extend "scripts"}}
    <script src="//cdn.bootcss.com/highlight.js/8.8.0/highlight.min.js"></script>
    <script>
        $('pre code').each(function (i, block) {
            hljs.highlightBlock(block);
        });        
    </script>
{{/extend}}
