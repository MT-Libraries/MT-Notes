<!doctype html>
<html lang="zh">
<head>
    <!-- META -->
    {{> meta}}

    <title>{{title}} - {{@app.site.name}}</title>

    <!-- Public  Stylesheets -->
    {{#if @app.env.dev}}
        <link href="/public/vendors/normalize.css/normalize.css" rel="stylesheet">
        <link href="/public/vendors/skeleton/css/skeleton.css" rel="stylesheet">
        <link href="/public/vendors/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    {{else}}
        <link href="//cdn.bootcss.com/normalize/3.0.3/normalize.min.css" rel="stylesheet">
        <link href="//cdn.bootcss.com/skeleton/2.0.4/skeleton.min.css" rel="stylesheet">
        <link href="//cdn.bootcss.com/font-awesome/4.4.0/css/font-awesome.min.css" rel="stylesheet">
    {{/if}}

    <link rel="stylesheet" href="/public/css/pro/global-1c0abb0b.css"/>
    
    <!-- Private Stylesheets -->
    {{{block "stylesheets"}}}

</head>
<body>

    <!-- Header -->
    <header class="nav-side">
        
        <a href="#" class="nav-reorder"><i class="fa fa-reorder"></i></a>
                
        <div class="nav-brand">
            {{#if @app.site.logo}}
                <a href="/" class="site-logo">
                    <img src="{{@app.site.logo}}" alt="logo">
                </a>
            {{else}}
                <a href="/" class="site-name">
                    {{@app.site.name}}
                </a>
            {{/if}}
            
            <p class="site-desc">{{@app.site.desc}}</p>
        </div>

        
        <ul class="nav-ul">
            {{#each @app.menu}}
                <li><a href="{{link}}">{{name}}</a></li>
            {{/each}}
        </ul>
    
    </header>

    <div class="main">
        <!-- Body -->
        {{{body}}}
    
        <!-- Footer -->
        <footer class="animated fadeInUp">
            <div class="container text-right">
                {{@app.year}} © 「MT.Notes」 •  Based On Node & <i class="fa fa-github"> Github</i>.
            </div>
        </footer>        
    </div>

    <!-- Public  scripts -->
    {{#if @app.env.dev}}
        <script src="/public/vendors/modernizr/modernizr.js"></script>
        <script src="/public/vendors/jquery/dist/jquery.min.js"></script>
    {{else}}
        <script src="//cdn.bootcss.com/modernizr/2.8.3/modernizr.min.js"></script>
        <script src="//cdn.bootcss.com/jquery/2.1.4/jquery.min.js"></script>
    {{/if}}
    
    {{> layout_footer_js_nav}}
    
    <!-- Private scripts -->
    {{{block "scripts"}}}

</body>
</html>