<% if(settings.config.WEB_SEA) { %>

	<!-- SEA.JS CONFIG -->
	<script>

		(function(){

			var app_config = {
				ver: '0.1.0',
				env: {
					production : <%= settings.config.WEB_PRODUCTION %>,
					development: <%= settings.config.WEB_DEVELOPMENT %>
				},
				sea:{
					app: '',
					base: '',
					suffix: ''
				}
			};

			(function () {

				var _ver = app_config.ver;
				var _env = app_config.env;
				var _sea = app_config.sea;

				if (_env.development) {
					app_config.sea.suffix = '-debug';
				} else {
					app_config.sea.suffix = '';
				}


				<!-- We use different app-version by run_env-->
				<!-- We Add dynamic base attribute by run_env-->
				if (_env.production) {
					_sea.app  = '/public/js-spm/dist/MT.SPM/' + _ver +'/src/page/' + JS_PAGE_NAME + _sea.suffix;
					_sea.base = '/public/js-spm/dist';
				} else {
					_sea.app  = '/public/js-spm/src/page/' + JS_PAGE_NAME;
					_sea.base = '/public/js-spm/spm_modules/';
				}

			})();

			seajs.config({base: app_config.sea.base});
			seajs.use(app_config.sea.app, function (page) {
				page.init();
			});
		})();

	</script>

<% } %>